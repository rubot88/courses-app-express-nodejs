<h1>Cart</h1>
<div id="cart">
    {{#if courses.length}}

    <table class="highlight">
        <thead>
            <tr>
                <th>Course title</th>
                <th>Count</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small js-add" data-id="{{_id}}">&plus;</button class="btn btn-primary">
                    <button class="btn btn-small red darken-1 js-remove" data-id="{{_id}}">&minus;</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
        <tfoot>
            <tr>
                <th>Total price</th>
                <td><strong class="price">{{totalPrice}}</strong></td>
            </tr>
        </tfoot>
    </table>

    {{else}}
    <p>Your Shopping Cart is empty</p>
    {{/if}}
</div>