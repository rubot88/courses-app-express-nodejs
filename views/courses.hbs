<h1>Courses</h1>
{{#if courses.length}}
<div class="courses">
    {{#each courses}}
    <div class="courses-row">
        <div class="courses-card">
            <div class="courses-image">
                <a href="/courses/{{id}}" target="_blank">
                    <img src="{{img}}" alt="{{title}}">
                </a>
            </div>
            <div class="content">
                <a href="/courses/{{id}}" target="_blank">
                    <span class="courses-title">{{title}}</span>
                    <p class="price">{{price}}</p>
                </a>
            </div>
            <div class="actions">
                <div class="link-wrapper">
                    <a href="/courses/{{id}}/edit?allowed=true">Edit course</a>
                    <a href="/courses/{{id}}" target="_blank">Open course</a>
                </div>
                <button type="button" class="btn btn-primary buy" data-id={{id}}>Buy</button>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<p>There are no courses yet</p>
{{/if}}