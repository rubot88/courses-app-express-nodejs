<h1>Edit - {{course.title}}</h1>
<div class="edit-form-wrapper">
    <form class="edit-form" action="/courses/edit" method="POST">
        <div class="input-field">
            <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
            <label for="title">Course name</label>
            <span class="helper-text" data-error="enter course title"></span>
        </div>
        <div class="input-field">
            <input id="price" name="price" type="number" class="validate" required min="1" value="{{course.price}}">
            <label for="price">Course price</label>
            <span class="helper-text" data-error="enter price"></span>
        </div>
        <div class="input-field">
            <input id="img" name="img" type="text" class="validate" required value="{{course.img}}">
            <label for="img">URL Course icon</label>
            <span class="helper-text" data-error="enter url course icon"></span>
        </div>
        <input type="hidden" name="id" value="{{course.id}}">
        <button type="submit" class="btn">Apply</button>
    </form class="edit-form">
    <form action="/courses/remove" method="POST">
        <input type="hidden" name="id" value="{{course.id}}">
        <button type="submit" class="btn red darken-1">Remove</button>
    </form>
</div>